<odoo>
  <!-- Document invoice Indonesia: extend document asli -->
  <template id="report_invoice_document_indonesia" inherit_id="account.report_invoice_document">
    <xpath expr="//div[contains(concat(' ', normalize-space(@class), ' '), ' page ')]" position="inside">

      <!-- TERBILANG -->
      <div style="margin-top: 30px; page-break-inside: avoid;">
        <p>
          <strong>Terbilang:</strong>
          <t t-esc="o.env['terbilang.mixin'].amount_to_text_id(o.amount_total)"/>
        </p>
      </div>

      <!-- TTD + STEMPEL (PDF-SAFE: TABLE, NO FLEX) -->
      <div style="margin-top: 60px; page-break-inside: avoid;">
        <table style="width:100%; border-collapse:collapse;">
          <tr>
            <td style="width:50%; text-align:center; vertical-align:top;">
              <div style="margin-bottom:60px;">Dibuat oleh,</div>
              <div style="border-top:1px solid #000; width:80%; margin:0 auto;"></div>
              <div style="margin-top:6px;">(Nama &amp; Tanda Tangan)</div>
            </td>

            <td style="width:50%; text-align:center; vertical-align:top;">
              <div style="margin-bottom:10px;">Disetujui,</div>

              <div style="height:120px; border:1px dashed #999; width:80%; margin:0 auto; line-height:120px; color:#999;">
                Tempat Stempel
              </div>

              <div style="margin-top:12px; border-top:1px solid #000; width:80%; margin:0 auto;"></div>
              <div style="margin-top:6px;">(Nama &amp; Tanda Tangan)</div>
            </td>
          </tr>
        </table>
      </div>

    </xpath>
  </template>
</odoo>
